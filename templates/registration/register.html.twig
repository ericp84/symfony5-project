{% extends 'layouts/base.html.twig' %}

{% block title %}Créez votre compte{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-error rounded mb-3" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1 class="text-center my-5">Créez votre compte</h1>
        {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(registrationForm.firstName) }} 
            </div>
            <div class="col-md-6">
                {{ form_row(registrationForm.lastName) }}
            </div>
        </div>
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
            <p class="text-center text-muted mt-5 mb-3">Vous avez deja un compte ? <a href="{{ path('app_login') }}">cliquez ici !</a></p>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
