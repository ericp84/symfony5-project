{% extends 'base.html.twig' %}

{% block title %}find all the best pins on earth !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<h1>{{pluralize(pins|length, 'Pin')}}</h1>

{% for pin in pins %}
    <article>
        <h2><a href="{{path('app_pins_show', {id: pin.id})}}">{{pin.title}}</a></h2>
        <p>{{pin.description|u.truncate(35, '...', true)}}</p>
        <p>Submitted at {{pin.createdAt|ago}}</p>
    </article>
{% endfor %}
{% endblock %}
