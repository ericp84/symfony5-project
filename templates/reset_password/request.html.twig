{% extends 'layouts/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="text-center mb-3 mt-5">Réinitialisation du mot de passe</h1>
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-error mb-3 rounded" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <p class="text-muted text-center mb-5">
                Entrez votre adresse mail pour recevoir un lien de réinitialisation de votre mot de passe.
            </p>
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-lg btn-primary">Envoyer le mail de réinitialisation</button>
                </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
